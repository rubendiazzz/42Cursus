################################################################################
#                                     CONFIG                                   #
################################################################################

NAME        := pipex
CC        := gcc
FLAGS    := -Wall -Wextra -Werror 

################################################################################
#                                 PROGRAM'S SRCS                               #
################################################################################

SRCS        :=      utils/ft_strlen.c \
                          utils/ft_strjoin.c \
                          utils/ft_split.c \
                          utils/ft_strncmp.c \
                          utils/ft_strdup.c \
                          main/childs.c \
                          main/free.c \
                          main/pipex.c \
                          main/errors.c \
                          
OBJS        := $(SRCS:.c=.o)

.c.o:
	${CC} ${FLAGS} -c $< -o ${<:.c=.o}
